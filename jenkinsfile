pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') { 
            steps {

                echo 'Deploying....'
                // sh 'pm2 start dist/main.js --name ssh-kicker --exp-backoff-restart-delay=100 --trace'
                sh 'pm2 restart 3 --update-env'
            }
        }
    }
}